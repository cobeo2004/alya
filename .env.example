# AI provider adapter: "openai" | "openrouter" | "openai-compat" (default)
AI_PROVIDER="openai-compat"

# API key for the selected provider
AI_API_KEY=""

# Base URL for the API endpoint
#   Required for "openai-compat" (e.g. https://openrouter.ai/api/v1)
#   Optional override for "openai" (e.g. for Azure OpenAI)
#   Not used for "openrouter" (handled automatically)
AI_BASE_URL=""

# Model identifier
#   openai:        "gpt-4o", "gpt-4o-mini", etc.
#   openrouter:    "anthropic/claude-sonnet-4", "openai/gpt-4o", etc.
#   openai-compat: whatever the endpoint supports
AI_MODEL=""

# Root directory to scan for localization files (defaults to cwd)
SCAN_ROOT=""
# Comma-separated folder names to exclude
SCAN_EXCLUDE="node_modules,.git,dist"
# Comma-separated file extensions to match
FILE_EXTENSIONS=".po"
# Number of concurrent language translation workers
BATCH_SIZE="5"
# Max number of strings per API request
CHUNK_SIZE="30"
